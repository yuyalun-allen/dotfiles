{
    // Common Settings
    "workbench.colorTheme": "Quiet Light",
    "workbench.startupEditor": "none",

    "editor.fontFamily": "CaskaydiaCove Nerd Font, Noto Serif SC, Consolas",
    "editor.fontSize": 18,
    "editor.fontWeight": "bold",
    "terminal.integrated.fontSize": 17,
    "debug.console.fontSize": 17,
    "editor.fontLigatures": false,

    "editor.cursorSurroundingLines": 10,
    "editor.largeFileOptimizations": true,
    "editor.inlineSuggest.enabled": true,
    
    "keyboard.dispatch": "keyCode",
    "window.titleBarStyle": "custom",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // For Vim Extension
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.whichwrap": "h,l",
    "vim.useCtrlKeys": true,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-p>": false
    },
    "vim.normalModeKeyBindings": [
        {
            "before": ["leader", "w"],
            "commands": [
                "workbench.action.files.save",
            ]
        },
        {
            "before": ["leader", "<cr>"],
            "commands": [":nohl"]
        },
        {
            "before": ["g", "r"],
            "commands": [
                "editor.action.goToReferences",
            ]
        },
        {
            "before": ["g", "d"],
            "commands": [
                "editor.action.revealDefinition",
            ]
        },
    ],
    "editor.wordWrap": "off",

    // For Language Extensions
    "redhat.telemetry.enabled": true,
    "jupyter.askForKernelRestart": false,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.callArgumentNames": "all",
    "python.analysis.inlayHints.variableTypes": true,
    "javascript.inlayHints.enumMemberValues.enabled": true,
    "javascript.inlayHints.functionLikeReturnTypes.enabled": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "github.copilot.enable": {
        "enabled": true
    },
    "cmake.showOptionsMovedNotification": false,
    "java.configuration.maven.userSettings": "/home/allen/.config/maven/settings.xml",
    "makefile.configureOnOpen": true,
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "{hexdiff}:/**/*.*": "hexEditor.hexedit",
        "*.md": "default",
        "*.markdown": "default"
    },
    "git.openRepositoryInParentFolders": "always",
    "haskell.manageHLS": "GHCup",
    "go.toolsManagement.autoUpdate": true,
    "C_Cpp.intelliSenseEngine": "disabled",
    "github.copilot.nextEditSuggestions.enabled": true,
    "python.analysis.typeCheckingMode": "basic",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "zsh",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        },
        "fish": {
            "path": "fish"
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        },
        "sh": {
            "path": "/bin/sh"
        }
    },
    "terminal.integrated.defaultProfile.linux": "sh",
}
